{
  "$schema": "http://json-schema.org/schema#",
  "title": "Network Connection",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "localChannel": {
      "type": "object",
      "properties": {
        "networkId": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": ["networkId", "name"]
    },
    "remoteChannel": {
      "type": "object",
      "properties": {
        "networkId": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": ["networkId", "name"]
    }
  },
  "required": ["id", "localChannel", "remoteChannel"]
}
